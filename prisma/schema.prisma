// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  news
  video
}

model Media {
  id   String @id @default(uuid())
  title       String
  imageURL       String
  link      String
  publisher String
  uploadedAt     DateTime @db.Timestamptz(3)
  type MediaType
  createdAt           DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt           DateTime      @default(now()) @updatedAt @db.Timestamptz(3)
}

model Portfolio {
  id              String @id @default(uuid())
  location        String
  model           String
  size            Int
  images          String[]
  createdAt       DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt       DateTime      @default(now()) @updatedAt @db.Timestamptz(3)
}

model Faq {
  id              String @id @default(uuid())
  question        String
  answer          String
  createdAt       DateTime        @default(now()) @db.Timestamptz(3)
  updatedAt       DateTime      @default(now()) @updatedAt @db.Timestamptz(3)
}

enum ModelPurpose {
  residence
  accommodation
  multipurpose
}

model Model {
  id              String @id @default(uuid())
  representativeImageURL  String
  name            String
  purpose         ModelPurpose
  minPrice        Int
  createdAt       DateTime        @default(now()) @db.Timestamptz(3)
  updatedAt       DateTime      @default(now()) @updatedAt @db.Timestamptz(3)
}

// model ModelDetail {}

model Admin {
  id              String        @id @default(uuid())
  email           String        @unique
  password        String
  salt            String
  createdAt       DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt       DateTime      @default(now()) @updatedAt @db.Timestamptz(3)
}